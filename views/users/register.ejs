<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Estilos -->
    <link rel="stylesheet" href="/stylesheets/register.css"> 
    
    <!-- Iconos FontAwesome -->
    <script defer src="https://kit.fontawesome.com/ad49d26689.js" crossorigin="anonymous"></script>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    
    <title>Registro de Usuario</title>
  </head>
  
  <body>
    <div class="cajaRegister">
      <h1>Registrate</h1>
      <form action="/users/register" method="POST" enctype="multipart/form-data" id="registerForm">
        <label for="name">Nombre:</label>
        <input type="text" name="name" required />
        <span class="error" id="nameError"></span>
      
        <label for="email">Correo:</label>
        <input type="email" name="email" required />
        <span class="error" id="emailError"></span>
      
        <label for="password">Contraseña:</label>
        <input type="password" name="password" required />
        <span class="error" id="passwordError"></span>
        
        <label for="category">Categoría:</label>
        <select name="category" required>
          <option value="user" selected>Usuario</option>
          <option value="admin">Administrador</option>
        </select>
        <span class="error" id="categoryError"></span>

        <label for="profileImage">Imagen de perfil:</label>
        <input type="file" name="profileImage" />
        <span class="error" id="imageError"></span>
      
       
      
        <button type="submit">Registrar</button>
      </form>
      
      
    </div>
    
    <script src="/javascripts/register.js"></script>
  </body>
</html>
