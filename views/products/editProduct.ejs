<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head', { extraCSS: '<link rel="stylesheet" href="/stylesheets/createyedit.css">' }) %>
<body>
  <%- include('../partials/header') %>

  <div class="container">
    <h1>Editar Producto</h1>
    <form action="/products/edit/<%= product.id %>" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Nombre del Producto:</label>
        <input type="text" id="name" name="name" value="<%= product.name %>" required>
      </div>

      <div class="form-group">
        <label for="description">Descripción:</label>
        <textarea id="description" name="description" required><%= product.description %></textarea>
      </div>

      <div class="form-group">
        <label for="image">Imagen:</label>
        <input type="file" id="image" name="image">
        <img src="<%= product.image %>" alt="Imagen del producto" style="max-width: 100px; margin-top: 10px;">
      </div>

      <div class="form-group">
        <label for="category">Categoría:</label>
        <input type="text" id="category" name="category" value="<%= product.category %>" required>
      </div>

      <div class="form-group">
        <label for="colors">Autor:</label>
        <input type="text" id="autor" name="autor" value="<%= product.autor %>">
      </div>

      <div class="form-group">
        <label for="precio">Precio:</label>
        <input type="number" id="precio" name="precio" value="<%= product.precio %>" required>
      </div>

      <button type="submit">Actualizar Producto</button>
    </form>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
