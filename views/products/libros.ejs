<!DOCTYPE html>
<html lang="es">
    
<%- include('../partials/head', { extraCSS: '<link rel="stylesheet" href="/stylesheets/libros.css">' }) %>

    <body>
        
        <%- include('../partials/header')%>
        <main>
            <section id="libros" class="container">
                <% libros.forEach(libro => { %>
                    <div class="book">
                        <img src="<%= libro.image %>" alt="<%= libro.name %>">
                        <h3><%= libro.name %></h3>
                        <p>Autor: <%= libro.autor || 'Desconocido' %></p>
                        <p class="precio">$ <%= libro.precio || 0.00 %></p>
                        <a href="libros/<%= libro.id %>">Ver m√°s</a>
                    </div>
                <% }); %>
            </section>
        </main>
        
        <%- include('../partials/footer')%>

        <script src="/javascripts/menuToggle.js"></script>

    </body>
</html>